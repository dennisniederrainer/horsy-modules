      <jobs>
          <dashboard_daily>
              <schedule>
                  <cron_expr>59 23 * * * *</cron_expr>
              </schedule>
              <run>
                  <model>Horsebrands_ProductReturn/observer::exportReturnsDaily</model>
              </run>
          </dashboard_daily>
      </jobs>
    </crontab> -->
</config>
