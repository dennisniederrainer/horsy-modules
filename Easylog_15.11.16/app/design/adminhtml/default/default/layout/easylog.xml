<layout>

    <adminhtml_reimport_index>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/modalbox.css</name><params>media="screen, projection"</params></action>
            <action method="addItem"><type>skin_js</type><name>js/modalbox.js</name></action>
        </reference>
    </adminhtml_reimport_index>

    <adminhtml_sales_order_view>
        <reference name="content">
            <block type="easylog/admin_widget_button" name="button_easylog_export" after="-"/>
        </reference>
    </adminhtml_sales_order_view>

    <adminhtml_system_config_edit>
        <reference name="js">
            <block type="adminhtml/template" template="easylog/js.phtml" name="easylog_js" />
        </reference>
    </adminhtml_system_config_edit>

</layout>
