<config>
    <modules>
        <TechDivision_Easylog>
            <version>15.11.16</version>
        </TechDivision_Easylog>
    </modules>
    <default>
        <carriers>
            <easylog_dhl>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>easylog/carrier_dhl</model>
                <allowed_methods>national,nationalexpress,regioat,euro,europlus,international,internationalexpress</allowed_methods>
                <name>Fixed</name>
                <price>5.00</price>
                <title>DHL</title>
                <type>I</type>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <handling_type>F</handling_type>
            </easylog_dhl>
        </carriers>
        <easylog>
            <info>
                <support_mail>dhl.support@netresearch.de</support_mail>
            </info>
        </easylog>
    </default>
    <global>
        <blocks>
            <easylog>
                <class>TechDivision_Easylog_Block</class>
            </easylog>
        </blocks>
        <helpers>
            <easylog>
                <class>TechDivision_Easylog_Helper</class>
            </easylog>
        </helpers>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <techdivision_easylog_massaction_add>
                        <type>singleton</type>
                        <class>easylog/observer</class>
                        <method>addMassAction</method>
                    </techdivision_easylog_massaction_add>
                </observers>
            </adminhtml_block_html_before>
        </events>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <is_bulky />
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <models>
            <easylog>
                <class>TechDivision_Easylog_Model</class>
                <resourceModel>easylog_resource</resourceModel>
            </easylog>
            <easylog_resource>
                <class>TechDivision_Easylog_Model_Resource</class>
                <entities>
                    <pool>
                        <table>techdivision_easylog_pools</table>
                    </pool>
                    <reimport>
                        <table>techdivision_easylog_reimports</table>
                    </reimport>
                    <reimport_status></reimport_status>
                    <carrier_dhl_service>
                        <table>techdivision_easylog_carrier_dhl_service</table>
                    </carrier_dhl_service>
                </entities>
            </easylog_resource>
        </models>
        <sales>
            <shipping>
                <carriers>
                    <dhl_easylog>
                        <class>TechDivision_Easylog_Model_Carrier_Dhl</class>
                    </dhl_easylog>
                </carriers>
            </shipping>
        </sales>
        <resources>
            <easylog_setup>
                <setup>
                    <module>TechDivision_Easylog</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </easylog_setup>
            <easylog_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </easylog_write>
            <easylog_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </easylog_read>
        </resources>
    </global>
    <frontend>>
        <translate>
            <modules>
                <TechDivision_Easylog>
                    <files>
                        <default>TechDivision_Easylog.csv</default>
                    </files>
                </TechDivision_Easylog>
            </modules>
        </translate>
        <layout>
          <updates>
              <easylog>
                  <file>easylog.xml</file>
              </easylog>
          </updates>
      </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <TechDivision_Easylog after="Mage_Adminhtml">TechDivision_Easylog_Admin</TechDivision_Easylog>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <TechDivision_Easylog>
                    <files>
                        <default>TechDivision_Easylog.csv</default>
                    </files>
                </TechDivision_Easylog>
            </modules>
        </translate>
        <layout>
            <updates>
                <easylog>
                    <file>easylog.xml</file>
                </easylog>
            </updates>
        </layout>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <TechDivision_Easylog />
            </modules>
        </suite>
    </phpunit>
</config>
